*----------------------------------------------------------------------*
***INCLUDE ZFRSD_CONVENIOS_CREAR_F02.
*----------------------------------------------------------------------*
*&---------------------------------------------------------------------*
*& Module STATUS_0300 OUTPUT
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
MODULE status_0300 OUTPUT.
  SET PF-STATUS 'ST300'.
  SET TITLEBAR 'T300'.
ENDMODULE.

*&---------------------------------------------------------------------*
*& Module SHOW_ALV OUTPUT
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
MODULE show_alv_vk OUTPUT.
  obj_ventas->alv_mostrar( contenedor = 'CC_VENTAS').
ENDMODULE.

*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_0300  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE user_command_0300 INPUT.
  CASE gv_ok_codet.
    WHEN 'SAVE'.
      PERFORM f_pasar_ventas.
      LEAVE TO SCREEN 0.
    WHEN 'CANCEL' OR 'OK'.
      LEAVE TO SCREEN 0.
  ENDCASE.
ENDMODULE.

*&---------------------------------------------------------------------*
*& Form F_PASAR_VENTAS
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM f_pasar_ventas .
  DELETE obj_ventas->it_data WHERE vkorg IS  INITIAL.
  it_ventas[] = obj_ventas->it_data[].
  obj_ventas->set_tienda( ).
ENDFORM.
