*----------------------------------------------------------------------*
***INCLUDE ZFRSD_CONVENIOS_CREAR_F02.
*----------------------------------------------------------------------*
*&---------------------------------------------------------------------*
*& Module STATUS_0200 OUTPUT
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
MODULE status_0200 OUTPUT.
  SET PF-STATUS 'ST200'.
  SET TITLEBAR 'T200'.
ENDMODULE.

*&---------------------------------------------------------------------*
*& Module SHOW_ALV OUTPUT
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
MODULE show_alv OUTPUT.
  obj_tiendas->alv_mostrar( contenedor = 'CC_TIENDAS').
ENDMODULE.

*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_0200  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE user_command_0200 INPUT.
  CASE gv_ok_codet.
    WHEN 'SAVE'.
      PERFORM f_pasar_tiendas.
      LEAVE TO SCREEN 0.
    WHEN 'CANCEL' OR 'OK'.
      LEAVE TO SCREEN 0.
  ENDCASE.
ENDMODULE.

*&---------------------------------------------------------------------*
*& Form F_PASAR_TIENDAS
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM f_pasar_tiendas .
  DELETE obj_tiendas->it_data WHERE werks IS  INITIAL.
  it_tiendas[] = obj_tiendas->it_data[].
  obj_tiendas->set_tienda( ).
ENDFORM.
